<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <listener>
    <listener-class>com.google.step2.servlet.GuiceServletContextListener</listener-class>
  </listener>
  
  <context-param>
    <param-name>guice-modules</param-name>
    <param-value>
      com.norex.openidtest.server.GuiceModule
    </param-value>
  </context-param>
  
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>com.norex.openidtest.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/openidtest/greet</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>OpenIdTest.html</welcome-file>
  </welcome-file-list>

</web-app>
